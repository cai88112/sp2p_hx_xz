		-->
		<!-- 查询未激活的初始化  -->
		<action name="unactivatedindex" class="unactivatedAction"
			method="unactivatedindex">
			<result name="success">
				/WEB-INF/page/admin/user-unactivated-index.jsp
			</result>
		</action>
		<!-- 查询未激活的详细列表 -->
		<action name="unactivatedinfo" class="unactivatedAction"
			method="unactivatedinfo">
