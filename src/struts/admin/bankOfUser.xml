<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="bankOfUser" extends="admin-default" namespace="/admin">
		<global-results>
			<result name="error">/500.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="error" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>

		<!-- 银行卡管理 -->
		<action name="queryUserBankInit" class="userBankAction" method="queryUserBankInit">
			<result name="success">/WEB-INF/page/admin/user-bankCard-manager-index.jsp
			</result>
		</action>


		<action name="queryUserBankList" class="userBankAction" method="queryUserBankList">
			<result name="success">/WEB-INF/page/admin/user-bankCard-manager-list.jsp
			</result>
		</action>

		<action name="queryOneBankCardInfo" class="userBankAction"
			method="queryOneBankCardInfo">
			<result name="success">/WEB-INF/page/admin/user-bankCard-manager-show.jsp
			</result>
			<result name="input">/WEB-INF/page/admin/user-bankCard-manager-show.jsp
			</result>
		</action>

		<action name="queryBankCardInfo" class="userBankAction" method="queryOneBankCardInfo">
			<result name="success">/WEB-INF/page/admin/user-bankCard-manager-check.jsp
			</result>
		</action>

		<!-- 审核银行卡 -->
		<action name="updateUserBankInfo" class="userBankAction"
			method="updateUserBankInfo">
			<result name="input">/WEB-INF/page/admin/user-bankCard-manager-check.jsp
			</result>
			<result name="success" type="redirect">queryUserBankInit.do</result>
		</action>


		<action name="queryModifyBankInit" class="userBankAction"
			method="queryUserBankInit">
			<result name="success">/WEB-INF/page/admin/user-bankCard-modify-index.jsp
			</result>
		</action>

		<action name="queryUserModifiyBankList" class="userBankAction"
			method="queryUserModifiyBankList">
			<result name="success">/WEB-INF/page/admin/user-bankCard-modify-list.jsp
			</result>
		</action>

		<action name="queryModifyBankInfo" class="userBankAction"
			method="queryModifyBankInfo">
			<result name="success">/WEB-INF/page/admin/user-bankCard-modify-check.jsp
			</result>
		</action>
		<!-- 审核银行卡变更 -->
		<action name="updateUserModifyBank" class="userBankAction"
			method="updateUserModifyBank">
			<result name="input">/WEB-INF/page/admin/user-bankCard-modify-check.jsp
			</result>
			<result name="success" type="redirect">queryModifyBankInit.do</result>
		</action>

	</package>
</struts>
